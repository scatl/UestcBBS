<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:minHeight="150dp">

        <TextView
            android:id="@+id/dialog_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/dialog_update_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_update_title"
            android:lineSpacingMultiplier="1.2"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/dialog_update_progressbar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/dialog_update_content"
            android:layout_marginTop="20dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/shape_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dialog_update_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_update_progressbar"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/dialog_update_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即更新"
            android:textSize="17sp"
            android:textColor="#eeeeee"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/shape_user_detail_favorite_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_below="@id/dialog_update_progress_text"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/dialog_update_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下次再说"
            android:textSize="13sp"
            android:textColor="@color/text_color_dark"
            android:layout_below="@id/dialog_update_download"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

</RelativeLayout>