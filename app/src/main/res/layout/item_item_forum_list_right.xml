<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        >
        <com.scatl.uestcbbs.custom.imageview.RoundedImageView
            android:id="@+id/forum_list_right_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/forum_list_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toEndOf="@id/forum_list_right_img"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/forum_list_right_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/forum_list_right_img"
            android:layout_marginStart="5dp"
            android:textSize="13sp"
            android:layout_below="@id/forum_list_right_name"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            />

    </RelativeLayout>



</RelativeLayout>