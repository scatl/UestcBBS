<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <com.scatl.uestcbbs.custom.imageview.CircleImageView
            android:id="@+id/user_follow_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/user_follow_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/user_follow_icon"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/user_follow_last_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/user_follow_icon"
            android:layout_marginStart="10dp"
            android:layout_below="@id/user_follow_name"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>



</RelativeLayout>
