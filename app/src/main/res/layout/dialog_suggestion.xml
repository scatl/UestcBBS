<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/dialog_suggestion_edit_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/dialog_suggestion_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"/>


        <TextView
            android:id="@+id/dialog_suggestion_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/dialog_suggestion_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:maxLines="8"
            android:textSize="15.5sp"
            android:textColor="@color/text_color"
            android:layout_below="@id/dialog_suggestion_reply"
            android:layout_marginTop="10dp"
            android:background="#0000"
            android:hint="请输入反馈内容"
            android:gravity="top"/>


        <TextView
            android:id="@+id/dialog_suggestion_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_suggestion_content"/>

    </RelativeLayout>

</RelativeLayout>

