<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AtUserListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/at_user_list_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/at_user_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="?attr/toolbar_color">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/at_user_list_indicator"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/at_user_list_app_bar"
        >
    </net.lucode.hackware.magicindicator.MagicIndicator>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/at_user_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/at_user_list_indicator"
        >

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>