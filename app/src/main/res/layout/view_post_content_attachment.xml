<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/shape_post_content_attachment"
    android:id="@+id/post_detail_attachment_rl"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/post_detail_attachment_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <TextView
            android:id="@+id/post_detail_attachment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/post_detail_attachment_img"
            android:layout_marginStart="10dp"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/post_detail_attachment_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/post_detail_attachment_img"
            android:layout_marginStart="10dp"
            android:layout_below="@id/post_detail_attachment_name"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

</RelativeLayout>